<!DOCTYPE html>
<html>
  <head>
    <title>Vueapp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'vue' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body >
    <div id="app">
      <% if notice || alert %>
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
      <% end %>
      <b-container>
        <%= yield %>
      </b-container>
    </div>
  </body>
</html>
